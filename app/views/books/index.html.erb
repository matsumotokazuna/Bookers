<h2>Books</h2>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to 'Show',"/books/#{book.id}" %></td>
        <td><%= link_to 'Edit',"/books/#{book.id}/edit" %></td>
        <td><%=link_to 'Destroy',"/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>