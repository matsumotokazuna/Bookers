<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <h4>Title</h4>
    <%= f.text_field :title %>
 
    <h4>Body</h4>
    <%= f.text_area :body %>
 
    <%= f.submit 'Update Book' %>

    <%= link_to 'Show',"/books/#{@book.id}" %>
    <%= link_to 'Back',books_path %>
 
<% end %>